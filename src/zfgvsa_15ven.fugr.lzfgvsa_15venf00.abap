    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZTSA15VEN WHERE
  LIFNR = ZVSA15VEN-LIFNR AND
  LAND1 = ZVSA15VEN-LAND1 AND
  CARRID = ZVSA15VEN-CARRID .
